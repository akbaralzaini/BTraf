<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_color"
    tools:context=".interfaces.ui.profile.ProfileFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/tops"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:gravity="center"
                android:padding="15dp"
                android:paddingTop="12dp"
                android:textSize="22sp"
                android:textColor="@color/text_color"
                android:textStyle="bold"/>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/content"
            android:layout_below="@id/tops"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="18dp"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/bus_person"/>

            <TextView
                android:layout_marginTop="18dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="name"/>
            <TextView
                android:id="@+id/tvName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="al zainiiiiiiii"
                android:textSize="18dp"
                android:textStyle="bold"/>

            <TextView
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="username"/>
            <TextView
                android:id="@+id/tvUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="al zainiiiiiiii"
                android:textSize="18dp"
                android:textStyle="bold"/>

            <TextView
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="mobile number"/>
            <TextView
                android:id="@+id/tvNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="9954325465767"
                android:textSize="18dp"
                android:textStyle="bold"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.45dp"
                android:background="#1B1B1B"
                android:layout_marginTop="18dp"/>

            <Button
                android:id="@+id/btnUpdateProfile"
                style="@style/MyButtonTheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:text="Update profile"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/btnUpdatePassword"
                style="@style/MyButtonTheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Update password"
                android:textColor="@color/white"/>


        </LinearLayout>

        <Button
            android:layout_below="@id/content"

            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:paddingLeft="18dp"
            android:paddingRight="18dp"
            android:layout_height="wrap_content"
            android:text="logOut"
            android:layout_marginTop="18dp"
            android:id="@+id/btnLogout"/>
    </RelativeLayout>

</FrameLayout>