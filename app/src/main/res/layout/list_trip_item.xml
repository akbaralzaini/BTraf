<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/shape_card_radius_white"
    android:layout_width="match_parent"
    android:layout_marginTop="8dp"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="111dp"
        android:layout_height="111dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="12dp"
        android:adjustViewBounds="true"
        android:contentDescription="iconCard"
        android:scaleType="fitXY"
        android:src="@drawable/bus_card" />

    <LinearLayout
        android:padding="12dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvBus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bus K8"
            android:textColor="@color/textColor"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textAllCaps="true"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvSource"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="source Stop"
                android:textStyle="bold"
                android:gravity="right"
                android:textColor="@color/purple_500"/>
            <TextView
                android:id="@+id/tvDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" - 30 menit - "
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/tvDestination"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="destination Stop"
                android:textStyle="bold"
                android:textColor="@color/purple_500"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tvAgency"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Agecy test"/>

        <TextView
            android:id="@+id/tvFare"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rp. 40.000"
            android:textStyle="bold"
            android:textSize="22sp"
            android:textColor="@color/purple_200"/>


    </LinearLayout>
</RelativeLayout>
