<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="project.akbaralzaini.btraf">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BTraf"
        android:usesCleartextTraffic="true">
        <activity android:name=".interfaces.ui.profile.UpdatePasswordActivity"></activity>
        <activity android:name=".interfaces.ui.profile.EditProfilActivity" />
        <activity
            android:name=".interfaces.ui.bus.TripScheduleActivity"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".interfaces.ui.bus.BookingTicketActivity"
            android:theme="@style/NoActionBar" />
        <activity android:name=".interfaces.RegisterActivity" />
        <activity android:name=".interfaces.LoginActivity" />
        <activity android:name=".interfaces.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".interfaces.MainActivity"
            android:theme="@style/NoActionBar" />
    </application>

</manifest>